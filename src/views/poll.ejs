<html>
    <head>
        <title>Details: <%= poll.poll_name%></title>
        <link rel="stylesheet" type='text/css' href="/styles/main.css">
    </head>
    <body>
        <div class='container'>
        <h5 class='errors'> <%= errors%></h5>
        <div id='post-description'>
        <a href="/polls">Back</a>
        <h2><%= poll.poll_name%></h2>
        <%if(poll.poll_description != 'undefined'){%>
            <h4><%= poll.poll_description%></h4>
        <%}else{%>
            <h4>No Description</h4>
        <%}%>   
        <p><%= poll.data_created.toDateString()%></p>
        <h3><%= poll.poll_1%></h3>
        <h4><%= poll.poll_1_votes%></h4>
        <h3><%= poll.poll_2%></h3>
        <h4><%= poll.poll_2_votes%></h4>
        </div>
        </div>
    </body>
</html>